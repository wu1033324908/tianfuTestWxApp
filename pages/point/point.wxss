
/* pages/userinfo/userinfo.wxss */
page{
  padding: 0;
  margin: 0;
  background-image: url(https://yiyouqi.oss-cn-shanghai.aliyuncs.com/dikanongWechar/messageInput/bg_1.png);
  background-size: cover;
  background-repeat: no-repeat;
  font-style: normal;
  color: #fff;
}
/* 清除浮动 */
.clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0}
.clearfloat{zoom:1}
.main_body{
  width: 686rpx;
  height: 100%;
  margin: auto;
  /* position: relative; */
}
.userinfo-avatar{
  display: block;
  border-radius: 50%;
  margin: auto;
  margin-top:46rpx;
  width: 220rpx;
  height: 220rpx;
}
.userinfo-nickname{
  text-align: center;
  margin-top: 52rpx;
  font-size: 32rpx;
  color: #000;
  font-weight: 400;

}
.main_body_background{
  position: absolute;
  height: 892rpx;
  width: 686rpx;
  margin: auto;
  border-radius: 20rpx;
  top: 150rpx;
  left:32rpx;
  background-color: #FFF;
  opacity: 0.7;
  z-index: -1;
}
.main_body-form{
  box-sizing: border-box;
  margin: 54rpx 55rpx;
  color: #666;
}

.submit{
  width: 160rpx;
  height: 64rpx;
  margin: auto;
  font-size: 28rpx;
  line-height: 64rpx;
  text-align: center;
  margin-top: 84rpx;
  border-radius: 25rpx;
  color: #FFF;
  background: #186CB2;
}
.main_info{
  margin: auto;
  margin-top: 40rpx;
  margin-bottom: 78rpx;
  width: 398rpx;

}
.info_item{
  color:#cccccc;
  border-bottom: solid 1rpx #CCC;
  height: 60rpx;
  margin-bottom: 25rpx;
}
.picker{
  width: 100%;
  float: left;
  font-size: 28rpx;
  background-image: url(https://yiyouqi.oss-cn-shanghai.aliyuncs.com/dikanongWechar/messageInput/sj.png);
  background-repeat: no-repeat;
  background-size: 15rpx 13rpx;
  background-position-x: 380rpx;
  background-position-y: 22rpx;
}
.info_item image{
  width: 12rpx;
  height: 12rpx;
  float: right;
  position: relative;
  top: 18rpx;
}
.loading{
  width: 280rpx;
  position: relative;
  height: 280rpx;
}
.loading image{
  width: 100%;
  height: 100%;
}
.loading text{
  display: block;
  font-size: 20rpx;
  width: 120rpx;
  background: #FFF;
  position: absolute;
  text-align: center;
  bottom: 30rpx;
  left: 75rpx;
  color: #666
}