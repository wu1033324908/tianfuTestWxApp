/* pages/userinfo/userinfo.wxss */
page{
  padding: 0;
  margin: 0;
  background-image: url(https://yiyouqi.oss-cn-shanghai.aliyuncs.com/dikanongWechar/messageInput/bg_1.png);
  background-size: cover;
  background-repeat: no-repeat;
  font-style: normal;
  color: #fff;
}
.mask{position: fixed;top: 0;left: 0; width: 100%;height: 100%;background: rgba(0, 0, 0,1);opacity: 0; display: flex;justify-content: center; align-items: center;}
/* 清除浮动 */
.clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0}
.clearfloat{zoom:1}
.main_body{
  width: 686rpx;
  height: 100%;
  margin: auto;
  /* position: relative; */
}
.userinfo-avatar{
  display: block;
  border-radius: 50%;
  margin: auto;
  margin-top:46rpx;
  width: 220rpx;
  height: 220rpx;
}
.userinfo-nickname{
  text-align: center;
  margin-top: 52rpx;
  font-size: 32rpx;
  color: #000;
  font-weight: 300;

}
.userinfo-city{
  text-align: center;
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #BABABA;
  font-weight: 300;
}
.userinfo-city image{
  width: 15rpx;
  height: 15rpx;
}
.main_body_background{
  position: absolute;
  height: 850rpx;
  width: 686rpx;
  border-radius: 20rpx;
  top: 156rpx;
  /* left:32rpx; */
  background-color: #FFF;
  opacity: 0.8;
  z-index: -1;
}
.main_body-form{
  box-sizing: border-box;
  margin: 54rpx 55rpx;
  color: #666;
}
.name{
  width: 324rpx;
  height: 64rpx;
  border-radius: 10rpx;
  background: #FDF9F5;
  margin-right: 28rpx;
  float: left;
}
.sex{
  float: left;
  width: 224rpx;
  height: 64rpx;
  border-radius: 10rpx;
  background: #FDF9F5;
}
.sex_nan{
  display: block;
  border: none;
  margin-right: 35rpx;
  float: right;
  width: 65rpx;
  height: 100%;
  background: url(https://yiyouqi.oss-cn-shanghai.aliyuncs.com/dikanongWechar/messageInput/boy_h.png);
  background-size: 75%;
  background-repeat: no-repeat;
  background-position-y: 15rpx;
}
.sex_nv{
  display: block;
  border: none;
  float: left;
  width: 65rpx;
  margin-left: 35rpx;
  height: 100%;
  background: url(https://yiyouqi.oss-cn-shanghai.aliyuncs.com/dikanongWechar/messageInput/girl_h.png);
  background-size: 65%;
  background-repeat: no-repeat;
  background-position-y: 5rpx;
}
.messageInput{
  margin-left: 25rpx;
  line-height: 65rpx;
  float: left;
  font-size: 30rpx;
}
.name input{
  width: 200rpx;
  float: left;
  font-size: 30rpx;
  margin-top:7rpx;
  padding-left: 15rpx;
}
.form_info_item{
  float: left;
  height: 64rpx;
  border-radius: 10rpx;
  background: #FDF9F5;
  width:250rpx;
  margin-top: 56rpx;
}
.form_info_item:nth-child(odd){
  margin-right: 76rpx;
}
.picker{ 
  width: 110rpx;
  float: left;
  padding-left: 15rpx;
  margin-top:3rpx;
  height: 80%;
  font-size: 26rpx;
  line-height: 60rpx;
  padding-right: 30rpx;
  background-image: url(https://yiyouqi.oss-cn-shanghai.aliyuncs.com/dikanongWechar/messageInput/sj.png);
  background-repeat: no-repeat;
  background-size: 10rpx 10rpx;
  background-position-x: 130rpx;
  background-position-y: 28rpx;
}
.form_info_item image{
  width: 8rpx;
  height: 8rpx;
  float: right;
  margin-right: 16rpx;
  vertical-align: middle;
  margin-top: 30rpx;
}
.submit{
  width: 158rpx;
  height: 62rpx;
  margin: auto;
  font-size: 32rpx;
  line-height: 62rpx;
  text-align: center;
  margin-top: 84rpx;
  border-radius: 25rpx;
  color: #FFF;
  background: #186CB2;
}