  right: 65rpx;
}
.footer_left{
  font-size: 18rpx;
  color: #888;
  font-weight: 600;
  position: absolute;
  top:1560rpx;
  left: 45rpx;
}
.loading{
  width: 280rpx;
  position: relative;
  height: 280rpx;
}
.loading image{
  width: 100%;
  height: 100%;
}
.loading text{
  display: block;
  font-size: 20rpx;
  width: 120rpx;
  background: #FFF;
  position: absolute;
  text-align: center;
  bottom: 30rpx;
  left: 75rpx;
  color: #666
}
::-webkit-scrollbar
{
width: 6px;
height: 6px;
background-color: #ffffff;
}
::-webkit-scrollbar-track
{
-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,0.3);
border-radius: 10px;
background-color: rgba(60, 90, 114, 0.1);
}
::-webkit-scrollbar-thumb
{
border-radius: 10px;
-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.3);
background-color: rgba(101, 161, 211,0.3);
}